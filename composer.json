{
    "name": "ubn/backend-monolith",
    "description": "Universal business network backend app.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "minimum-stability": "dev",
    "require": {
        "php": ">=7",
        "mongofill/mongofill": "dev-master",
        "laravel/framework": "5.3.*",
        "guzzlehttp/guzzle": "*",
        "doctrine/mongodb": "~1.3",
        "doctrine/mongodb-odm": "1.1.1",
        "jmikola/geojson": "^1.0",
        "gedmo/doctrine-extensions": "^3.0@dev",
        "barryvdh/laravel-cors": "^0.8.2",
        "dingo/api": "1.0.x@dev",
        "darkaonline/l5-swagger": "~3.0",
        "ramsey/uuid": "^3.5",
        "jenssegers/mongodb": "^3.1",
        "maatwebsite/excel": "~2.1.0",
        "firebase/php-jwt": "^4.0",
        "flow/jsonpath": "^0.3.4",
        "league/flysystem-aws-s3-v3": "~1.0",
        "friendsofphp/php-cs-fixer": "^2.2",
        "predis/predis": "^1.1"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/hlogeon/mongofill"
        }
    ],
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "3.1.*",
        "hlogeon/codeception-doctrine-mongo": "dev-master",
        "codeception/codeception": "^2.2",
        "barryvdh/laravel-ide-helper": "^2.1",
        "league/factory-muffin": "^3.0",
        "league/factory-muffin-faker": "^2.0",
        "squizlabs/php_codesniffer": "2.*",
        "pdepend/pdepend" : "2.2.4",
        "phpstan/phpstan": "^0.6.4"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php",
            "tests/factories"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
//            "php artisan db:seed"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan db:seed"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
